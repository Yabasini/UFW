---
- hosts: wordpress_servers
  tasks:
  - name: Installeer UFW
    apt:
      name: ufw
      state: present

  - name: Sta SSH toe
    ufw:
      rule: allow
      port: 22
      proto: tcp

  - name: Sta Wordpress toe (port 80 & 443)
    ufw:
      rule: allow
      port: "{{ item }}"
      proto: tcp
    with_items:
      - 80
      - 443

  - name: Activeer UFW
    ufw:
      state: enabled
